@using HMS.ViewModels;
@model IEnumerable<SpecializationViewModel>
@using HMS.MVCHelper

@{
    ViewBag.Title = "Specialization";
}

<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div>
                        <h4 style="font-weight: 600;">Blood Groups</h4>


                    </div>

                </div>


                <div class="page-title-actions">
                    <div class="d-inline-block dropdown">

                        @Html.ModelDialog("<i class='fa fa-user-plus fa-w-20'></i> Add Specialization", "Add Specialization", Url.Action("Create", "Specializations"))
                    </div>
                </div>
            </div>
        </div>
        <div class="">
            <div class="row">
                <div class="col-md-6">

                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            <h5 class="card-title">Blood Groups</h5>
                            <div class="scroll-area-lg">
                                <div class="scrollbar-container ps--active-y">

                                    <div class="table-responsive">
                                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th>@Html.DisplayNameFor(m => m.Specialization)</th>
                                                    <th class="text-center">Update</th>
                                                </tr>
                                            </thead>
                                            <tbody>



                                                @foreach (var s in Model)
                                                {

                                                    <tr>
                                                        <td>
                                                            @s.Specialization
                                                        </td>
                                                        <td class="text-center">

                                                            @Html.ModelDialogEdit("Edit", "Edit", "Specializations", routeValues: new { id = s.Specialization_ID })
                                                            @Html.ModelDialogDelete("Delete", "Delete", "Specializations", routeValues: new { id = s.Specialization_ID })

                                                        </td>
                                                    </tr>
                                                }

                                            </tbody>
                                        </table>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>