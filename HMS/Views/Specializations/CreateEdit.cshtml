@model HMS.ViewModels.SpecializationViewModel

@using (Html.BeginForm("CreateEdit", "Specializations", FormMethod.Post))
{
    <div class="modal-header">
        <h5 class="card-title">@(Model.Specialization_ID == 0 ? "Create New Specialization" : "Update Specialization")</h5>
        @Html.HiddenFor(model => model.Specialization_ID)
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="modal-body">
        <div class="form-row">
            <div class="col-6">
                <div class="form-group">
                    <label for="Specialist"> @Html.DisplayNameFor(model => model.Specialization)</label>
                    @Html.EditorFor(model => model.Specialization, new { htmlAttributes = new { @class = "form-control" } })
                    <small id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(model => model.Specialization, "", new { @class = "text-danger" })</small>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">@(Model.Specialization_ID == 0 ? "Save" : "Update")</button>
    </div>
}

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/MyScripts/AjaxSubmit.js")