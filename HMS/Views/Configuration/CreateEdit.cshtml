@model HMS.ViewModels.ShiftViewModel

@using (Html.BeginForm("CreateEdit", "Configuration", FormMethod.Post))
{
    <div class="modal-header">
        <h5 class="card-title">@(Model.ID == 0 ? "Make Shift" : "Update Shift")</h5>
        @Html.HiddenFor(model => model.ID)
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>


    <div class="modal-body">

        <div class="form-row">
            <div class="col-6">
                <div class="form-group">
                    <label for="Name">@Html.DisplayNameFor(model => model.Name)</label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    <small id="Name" class="form-text text-muted">@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</small>
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label for="StartTime">@Html.DisplayNameFor(model => model.StartTime)</label>
                    @Html.EditorFor(model => model.StartTime)
                    <small id="StartTime" class="form-text text-muted">@Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })</small>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">@(Model.ID == 0 ? "Save" : "Update")</button>
    </div>

}

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/MyScripts/AjaxSubmit.js")