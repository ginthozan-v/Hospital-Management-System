@model HMS.ViewModels.CreatePrescriptionViewModel

@using (Html.BeginForm("CreateEdit", "Bloodgroups", FormMethod.Post))
{
    <div class="modal-header">
        <h5 class="card-title">Prescription Details</h5>
        @Html.HiddenFor(model => model.PrescriptionId)
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>



    <div class="modal-body ">
        <div class="form-row">
            <div class="col-12 pl-4">
                <div class="mb-3">
                    <label class="font-weight-bold"><i class="fa fa-dot-circle text-warning mr-1"></i> Drug Name</label>
                    <p><span class="font-weight-normal pl-4 ">@Html.DisplayFor(model => model.Drug_Name) </span></p>

                    <label class="font-weight-bold"><i class="fa fa-dot-circle text-warning mr-1"></i> Quantity</label>
                    <p><span class="font-weight-normal pl-4">@Html.DisplayFor(model => model.Quantity) </span></p>

                    <label class="font-weight-bold"><i class="fa fa-dot-circle text-warning mr-1"></i> Disease</label>
                    <p><span class="font-weight-normal pl-4">@Html.DisplayFor(model => model.Desease) </span></p>

                    <label class="font-weight-bold"><i class="fa fa-dot-circle text-warning mr-1"></i> Instruction</label>
                    <p><span class="font-weight-normal pl-4">@Html.DisplayFor(model => model.Instruction) </span></p>

                    <label class="font-weight-bold"><i class="fa fa-dot-circle text-warning mr-1"></i> Date</label>
                    <p><span class="font-weight-normal pl-4">@Html.DisplayFor(model => model.DateTime) </span></p>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
}

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/AjaxSubmit")




