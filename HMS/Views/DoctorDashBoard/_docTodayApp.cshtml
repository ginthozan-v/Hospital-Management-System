@using HMS.MVCHelper

<div class="mb-3 card">
    <div class="card-header-tab card-header-tab-animation card-header">
        <div class="card-header-title">
            Today Appointments
        </div>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="tabs-eg-77">

                <div class="scroll-area-sm">
                    <div class="scrollbar-container ps ps--active-y">
                        <ul class="rm-list-borders rm-list-borders-scroll list-group list-group-flush">

                            @{var Applist = ViewBag.DocAppList as List<HMS.ViewModels.AppointmentViewModel>; }
                            @if (Applist.Count > 0)
                            {

                                <h6 class="text-muted text-uppercase font-size-md opacity-5 font-weight-normal">Patients</h6>
                                foreach (var item in ViewBag.DocAppList)
                                {
                                    int Status = item.Appointment_Status;
                                    <li class="list-group-item">
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left">
                                                    <div class="widget-heading">@item.Patient_Name</div>
                                                </div>
                                                <div class="widget-content-right">
                                                    <div class="font-size-xlg text-muted">
                                                        @*<small class="opacity-5 pr-1">$</small>*@
                                                        <span>@item.Appointment_Time</span>

                                                        @if (Status == 1)
                                                        {
                                                            <small class="text-success pl-2">
                                                                <i class="fa fa-dot-circle"></i>
                                                            </small>
                                                        }
                                                        @if (Status == 2)
                                                        {
                                                            <small class="text-warning pl-2">
                                                                <i class="fa fa-dot-circle"></i>
                                                            </small>
                                                        }
                                                        @if (Status == 3)
                                                        {
                                                            <small class="text-danger pl-2">
                                                                <i class="fa fa-dot-circle"></i>
                                                            </small>
                                                        }
                                                        <small class="text-danger pl-2">
                                                            @Html.DetailLink("PatientDetails", "DoctorDashBoard", routeValues: new { id = item.Appointment_ID })
                                                        </small>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                }
                            }
                            else
                            {
                                <p class="text-center font-weight-bold">No records found!</p>
                            }
                        </ul>
                        <div class="ps__rail-x" style="left: 0px; bottom: 0px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps__rail-y" style="top: 0px; height: 200px; right: 0px;"><div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 139px;"></div></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>