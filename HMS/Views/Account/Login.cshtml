@using HMS.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="app-main__inner">
    <div class="row justify-content-md-center">

        <div class="col-md-auto">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="login main-card mb-3 card">
                    <div class="card-body">
                        <h5 class="card-title text-center">@ViewBag.Title</h5>

                        <div class="text-center mb-2">
                            @Html.ValidationMessage("", new { @class = "text-danger" })
                        </div>

                        <div class="form-row">

                            <div class="col-md-12 mb-3">
                                <label for="validationTooltipUsername">
                                    @Html.LabelFor(m => m.Username)
                                </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="validationTooltipUsernamePrepend">
                                            <i class="fas fa-user"></i>
                                        </span>
                                    </div>
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", id = "validationTooltipUsername", })
                                </div>
                                <span id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })</span>

                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-12 mb-3">
                                <label for="validationTooltip03"> @Html.LabelFor(m => m.Password)</label>

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="validationTooltipUsernamePrepend">
                                            <i class="fas fa-lock"></i>
                                        </span>
                                    </div>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "validationTooltip03" })
                                </div>
                                <span id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })</span>
                            </div>
                        </div>

                        <fieldset class="position-relative row form-group">
                            <div class="col-sm-10">
                                <div class="position-relative form-check">
                                    <label class="form-check-label">
                                        @Html.CheckBoxFor(model => model.RememberMe, new { @class = "form-check-input" })
                                        @Html.LabelFor(m => m.RememberMe)
                                    </label>
                                </div>
                            </div>
                        </fieldset>

                        <div class="form-row">
                            <div class="col-md-12 mb-3">
                                <button class="btn btn-primary" type="submit">Login</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jqueryval")