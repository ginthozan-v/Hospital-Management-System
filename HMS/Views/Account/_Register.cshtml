@using HMS.Models;
@model RegisterViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="card-title">@ViewBag.Title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>


    <div class="modal-body">
        <div class="form-row">
            <div class="col-4">
                <div class="form-group">
                    <label for="Specialist">@Html.LabelFor(m => m.Username)</label>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    <small id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })</small>
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label for="Specialist">@Html.LabelFor(m => m.DoctorId) <small> (Optional)</small></label>
                    @*@Html.DropDownListFor(m => m.Username, new SelectList(ViewBag.Doctors, "Value", "Text"), "-- Select Doctor-- ", new { @class = "form-control" })*@
                    @Html.DropDownListFor(m => m.DoctorId, new SelectList(ViewBag.Doctors, "Value", "Text"), "-- Select Doctor-- ", new { @class = "form-control" })
                    <small id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(m => m.DoctorId, "", new { @class = "text-danger" })</small>
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label for="Specialist">@Html.LabelFor(m => m.Email)</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    <small id="emailHelp" class="form-text text-muted"> @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })</small>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-6">
                <div class="form-group">
                    <label for="Specialist">@Html.LabelFor(m => m.RoleName)</label>
                    @Html.DropDownListFor(m => m.RoleName, new SelectList(ViewBag.Roles, "Value", "Text"), "-- Select Role-- ", new { @class = "form-control" })
                    <small id="emailHelp" class="form-text text-muted"> @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })</small>
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label for="Specialist">@Html.LabelFor(m => m.Phone)</label>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    <small id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })</small>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-6">
                <div class="form-group">
                    <label for="Specialist">@Html.LabelFor(m => m.Password)</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    <small id="emailHelp" class="form-text text-muted"> @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })</small>
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label for="Specialist">@Html.LabelFor(m => m.ConfirmPassword)</label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    <small id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })</small>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/MyScripts/AjaxSubmit.js")


<script>
    //GetDate
    $("#DoctorId").change(function () {

        var DoctorId = $("#DoctorId Option:Selected").text();
        $("#Username").val(DoctorId);
    });
</script>