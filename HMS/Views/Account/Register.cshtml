@using HMS.Models;
@model RegisterViewModel

<div class="app-main__outer">
    <div class="app-main__inner">
        @{
            ViewBag.Title = "Register";
        }

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal needs-validation", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title text-center">@ViewBag.Title</h5>

                    <div class="text-center mb-2">
                        @Html.ValidationMessage("", new { @class = "text-danger" })
                    </div>

                    <div class="form-row">

                        <div class="col-md-4 mb-3">
                            <label for="validationTooltipUsername">@Html.LabelFor(m => m.Username)</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                            </div>
                            <span id="emailHelp" class="form-text text-muted"> @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })</span>

                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="validationTooltipUsername">
                                @Html.LabelFor(m => m.Email)
                            </label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="validationTooltipUsernamePrepend">
                                        <i class="fas fa-at"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "validationTooltipUsername" })
                            </div>
                            <span id="emailHelp" class="form-text text-muted"> @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })</span>

                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="validationTooltipUsername">
                                @Html.LabelFor(m => m.RoleName)
                            </label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="validationTooltipUsernamePrepend">
                                        <i class="fas fa-user-tag"></i>
                                    </span>
                                </div>
                                @Html.DropDownListFor(m => m.RoleName, ViewBag.Roles as SelectList , "-- Select Role-- ", new { @class = "form-control" })
                            </div>
                            <span id="emailHelp" class="form-text text-muted"> @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })</span>

                        </div>

                        @*<div class="col-md-4 mb-3">
            <label for="validationTooltipUsername">
                @Html.LabelFor(m => m.RoleName)
            </label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="validationTooltipUsernamePrepend">
                        <i class="fas fa-user-tag"></i>
                    </span>
                </div>
                @Html.DropDownListFor(m => m.RoleName, new SelectList(ViewBag.Roles, "Value", "Text"), new { @class = "form-control" })
            </div>
            <span id="emailHelp" class="form-text text-muted"> @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })</span>

        </div>*@
                    </div>

                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="validationTooltipUsername">
                                @Html.LabelFor(m => m.Phone)
                            </label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="validationTooltipUsernamePrepend">
                                        <i class="fas fa-phone"></i>
                                    </span>
                                </div>
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", id = "validationTooltipUsername", })
                            </div>
                            <span id="emailHelp" class="form-text text-muted"> @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })</span>

                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="validationTooltip03"> @Html.LabelFor(m => m.Password)</label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="validationTooltipUsernamePrepend">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </div>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "validationTooltip03" })
                            </div>
                            <span id="emailHelp" class="form-text text-muted"> @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })</span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="validationTooltip03">
                                @Html.LabelFor(m => m.ConfirmPassword)
                            </label>

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="validationTooltipUsernamePrepend">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </div>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "validationTooltip03" })
                                <span id="emailHelp" class="form-text text-muted">@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })</span>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-primary" type="submit">Register</button>
                    @*<a href="/Account/Login" class="btn btn-primary" type="submit">Back to Login</a>*@

                </div>
            </div>
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
