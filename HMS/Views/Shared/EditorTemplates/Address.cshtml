@model HMS.ViewModels.AddressViewModel

@if (@Model != null)
{
    @Html.HiddenFor(m => m.Id)
}


<div class="form-row">
    <div class="col-6">
        <div class="form-group">
            <label for="Address">@Html.DisplayNameFor(m => m.Street)</label>
            @Html.EditorFor(d => d.Street, new { htmlAttributes = new { @class = "form-control" } })
