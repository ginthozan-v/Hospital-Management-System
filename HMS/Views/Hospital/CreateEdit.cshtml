@model HMS.ViewModels.HospitalViewModel


<div class="modal-content">
    @using (Html.BeginForm("CreateEdit", "Hospital", FormMethod.Post))
    {
        <div class="modal-header">
            <h5 class="card-title">@(Model.Hospital_ID == 0 ? "Create New Hospital" : "Update Hospital Details")</h5>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Hospital_ID)

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>



        <div class="modal-body">

            <div class="form-row">
                <div class="col-6">
                    <div class="form-group">
                        <label for="Specialist"> @Html.DisplayNameFor(model => model.Hospital_Name)</label>
                        @Html.EditorFor(model => model.Hospital_Name, new { htmlAttributes = new { @class = "form-control" } })
                        <small id="emailHelp" class="form-text text-muted">  @Html.ValidationMessageFor(model => model.Hospital_Name, "", new { @class = "text-danger" })</small>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        <label for="Specialist"> @Html.DisplayNameFor(model => model.Hospital_Address)</label>
                        @Html.EditorFor(model => model.Hospital_Address, new { htmlAttributes = new { @class = "form-control" } })
                        <small id="emailHelp" class="form-text text-muted"> @Html.ValidationMessageFor(model => model.Hospital_Address, "", new { @class = "text-danger" })</small>
                    </div>
                </div>
            </div>

            <div class="form-row">

                <div class="col-6">
                    <div class="form-group">
                        <label for="Age"> @Html.DisplayNameFor(model => model.Hospital_Phone)</label>
                        @Html.EditorFor(model => model.Hospital_Phone, new { htmlAttributes = new { @class = "form-control" } })
                        <small id="emailHelp" class="form-text text-muted"> @Html.ValidationMessageFor(model => model.Hospital_Phone, "", new { @class = "text-danger" })</small>
                    </div>

                </div>

                <div class="col-6">
                    <div class="form-group">
                        <label for="Age"> @Html.DisplayNameFor(model => model.Hospital_Email)</label>
                        @Html.EditorFor(model => model.Hospital_Email, new { htmlAttributes = new { @class = "form-control" } })
                        <small id="emailHelp" class="form-text text-muted"> @Html.ValidationMessageFor(model => model.Hospital_Email, "", new { @class = "text-danger" })</small>
                    </div>

                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">@(Model.Hospital_ID == 0 ? "Save" : "Update")</button>
        </div>

    }
</div>

@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/MyScripts/AjaxSubmit.js")