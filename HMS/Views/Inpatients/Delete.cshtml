@model HMS.Models.Inpatient


@{
    ViewBag.Title = "Delete";
}

<div class="modal-content">

    <div class="modal-header">
        <h5 class="card-title">Remove Patient</h5>
        @Html.HiddenFor(model => model.id)

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="modal-body text-center">
        <div>
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.Patient.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Patient.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Ward.Ward_no)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ward.Ward_no)
                </dd>


                <dt>
                    @Html.DisplayNameFor(model => model.AdmissionDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AdmissionDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DischargeDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DischargeDate)
                </dd>



            </dl>
            <h6 style="color: darkred;">Are you sure you want to delete this InPatients?</h6>

        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-footer justify-content-center">


            <div class="form-actions no-color">
                <button type="button" class="btn btn-warning" data-dismiss="modal">No !</button>
                <button type="submit" class="btn btn-danger">Yes !</button>

            </div>

        </div>
    }
</div>
@Scripts.Render("~/bundles/AjaxSubmit")